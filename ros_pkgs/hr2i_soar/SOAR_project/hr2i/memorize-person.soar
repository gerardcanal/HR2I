sp {hr2i*propose*memorize-person
   (state <s> ^name hr2i
              ^robot <r>
              ^person <p>
              ^desired <d>)
   (<r> ^locId <rlid>)
   (<p> ^id <pid>
        ^memorized no)
   (<d> ^name learn-person
        ^person <pp>)
   (<pp> ^id <pid>
         ^memorized yes)
-->
   (<s> ^operator <op> + >)
   (<p> ^near yes)
#        ^locId <rlid>)
   (<op> ^name memorize-person
         ^toPers <p>)
}

sp {hr2i*apply*memorize-person
   (state <s> ^operator <op>
              ^io.output-link <out>)
   (<op> ^name memorize-person
         ^toPers <pop>) 
   (<pop> ^id <pid>)
-->
   (<out> ^memorize-person.pers <pid>)
}

sp {hr2i*apply*remove*memorize-person
   (state <s> ^io.output-link <out>
              ^operator <op>
              ^person <p>
              ^robot <r>)
   (<out> ^memorize-person <st>)
   (<st> ^status complete
         ^pers <pid>)
   (<op> ^name memorize-person
         ^toPers <pop>)
   (<pop> ^id <pid>)
   (<p> ^id <pid>
        ^locId <plid>)
   (<r> ^locId <rlid>)
-->
   (<p> ^memorized yes
                   no -
        ^locId <rlid>
               <plid> -)
   (<out> ^memorize-person <st> -)
}