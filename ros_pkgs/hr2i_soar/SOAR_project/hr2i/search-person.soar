sp {hr2i*propose*search-person
   (state <s> ^name hr2i
              ^person <p>
              ^location <l>
              ^robot <r>
              ^desired <d>)
   (<r> ^locId <rloc>)
   (<l> ^id <rloc>)
   (<p> ^found no
        ^locId <rloc>)
   (<d> ^person <dp>)
-->
   (<s> ^operator <op> + =)
   (<op> ^name search-person
         ^persToSearch <p>
         ^toLoc <l>)
}

sp {hr2i*propose*move*search-person
   (state <s> ^name hr2i
              ^person <p>
              ^location <l>
              ^robot <r>
              ^desired <d>)
   (<r> ^locId <rloc>)
   (<l> ^id <ploc>)
   (<p> ^found no
        ^locId {<> <rloc> <ploc>})
   (<d> ^person <dp>
        ^name find)
-->
   (<s> ^operator <op> + >)
   (<op> ^name navigate
         ^toLoc <l>)
}

sp {hr2i*apply*search-person
   (state <s> ^operator <op>
              ^io.output-link <out>)
   (<op> ^name search-person
         ^persToSearch <p>
         ^toLoc <rloc>)
   (<p> ^id <pid>)
-->
   (<out> ^search-person.pers <pid>)
}

sp {hr2i*apply*search-person*remove-search-person
   (state <s> ^operator <op>
              ^io.output-link <out>
              ^person <p>)
   (<op> ^name search-person
         ^persToSearch <pop>
          ^toLoc <rloc>)
  
   (<rloc> ^id <rlocid>)
   (<pop> ^id <popid>)
   (<p> ^id <popid>
        ^locId <plocid>
        ^near no)
   
   (<out> ^search-person <st>)
   (<st> ^status complete)
-->
   (<p> ^found yes
               no -
        ^locId <rlocid>
                <plocid> -
        ^near yes)

   (<out> ^search-person <st> -)
}










sp {hr2i*apply*fail-search-person*remove-search-person
   (state <s> ^operator <op>
              ^io.output-link <out>
              ^person <p>)
   (<op> ^name search-person
         ^persToSearch <pop>
          ^toLoc <rloc>)
  
   (<rloc> ^id <rlocid>)
   (<pop> ^id <popid>)
   (<p> ^id <popid>
        ^locId <plocid>
        ^near no)
   
   (<out> ^search-person <st>)
   (<st> ^status error)
-->

   (<out> ^search-person <st> -)
   (<out> ^achieved.true 1)
}
