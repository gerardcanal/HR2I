sp {hr2i*propose*follow
   (state <s> ^name hr2i
              ^robot <r>
              ^person <p>
              ^desired <d>)
   (<r> ^locId <rloc>)
   (<p> ^followed no
        ^near yes
        ^id <pid>)
   (<d> ^name follow
        ^person <dp>)
   (<dp> ^id <pid>
         ^followed yes)
-->
   (<s> ^operator <op> + =)
   (<op> ^name follow
         ^toPers <p>
         ^withRob <r>)
}

