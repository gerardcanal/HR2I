sp {hr2i*apply*follow 
   (state <s> ^operator <op> 
              ^io.output-link <out>) 
   (<op> ^name follow 
         ^toPers <pop>) 
   (<pop> ^id <pid>) 
--> 
   (<out> ^follow.pers <pid>) 
} 

sp {hr2i*apply*follow*remove-follow 
   (state <s> ^io.output-link <out> 
              ^operator <op> 
              ^person <p> 
              ^robot <r>) 
   (<out> ^follow <st>) 
   (<st> ^status complete 
         ^pers <pid>) 
   (<op> ^name follow 
         ^toPers <pop>) 
   (<pop> ^id <pid>) 
   (<p> ^id <pid> 
        ^followed <pf> 
        ^near <pn>) 
--> 
   (<p> ^followed yes 
                  <pf> - 
        ^near yes 
              <pn> -) 
   (<out> ^follow <st> -) 
} 