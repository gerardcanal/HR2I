sp {hr2i*propose*point-obj
   (state <s> ^name hr2i
              ^robot <r>
              ^location <l>
              ^desired <d>)
   (<r> ^pointedAtLoc -1)
   (<l> ^id <lId>
        ^pointed-at no)
   (<d> ^name point-at
        ^robot <rr>
        ^location <ll>)
   (<rr> ^pointedAtLoc <lId>)
   (<ll> ^id <lId>
         ^pointed_at yes)
-->
   (<s> ^operator <op> + >)
   (<op> ^name point-obj
         ^locId <lId>)
}

