sp {hr2i*apply*point-obj
   (state <s> ^operator <op>
              ^io.output-link <out>)
   (<op> ^name point-obj
         ^locId <l>)
-->
   (<out> ^point-obj.loc <l>)
}

sp {hr2i*apply*remove*point-obj
  (state <s> ^io.output-link <out>
             ^operator <op>
             ^location <l>
             ^robot <r>)
   (<out> ^point-obj <st>)
   (<st> ^status complete
         ^loc <loc>)
   (<op> ^name point-obj
         ^locId <loc>)
   (<l> ^id <loc>
        ^pointed-at no)
   (<r> ^pointedAtLoc <rloc>)
-->
   (<r> ^pointedAtLoc <loc>
                      <rloc> -)
   (<l> ^id <loc>
        ^pointed_at yes
                    no -)
   (<out> ^point-obj <st> -)
}
