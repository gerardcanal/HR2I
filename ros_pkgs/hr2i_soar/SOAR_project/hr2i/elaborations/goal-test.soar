sp {hr2i*propose*goal*achieved
   (state <s> ^name hr2i
              ^desired <d>)
-->
   (<s> ^operator <op> + >)
   (<op> ^name goal-achieved)
}

sp {hr2i*elaborate*goal*different*value
   (state <s> ^name hr2i
              ^desired <d>
              ^operator <op> +
              ^<element> <el>)
   (<op> ^name goal-achieved)
   (<el> ^id <ide>
         ^<atr> <val1>)
   (<d> ^<element> <del>)
   (<del> ^id <ide>
          ^<atr> {<> <val1> <val2>})
-->
   (<s> ^operator <op> ~)
}

sp {hr2i*elaborate*goal*missing*value
   (state <s> ^name hr2i
              ^desired <d>
              ^operator <op> +
              ^<element> <el>)
   (<op> ^name goal-achieved)
   (<d> ^<element> <del>)
   (<del> ^id <id>
          ^<atr> <val>)
   (<el> ^id <id>
         -^<atr> <val>)
-->
   (<s> ^operator <op> ~)
}


sp {hr2i*apply*goal*achieved
   (state <s> ^operator <op>
              ^desired <d>
              ^io.output-link <out>)
   (<op> ^name goal-achieved)
-->
   (<out> ^achieved.true 1)
}

sp {hr2i*apply*detect*goal*achieved*remove-achieved
   (state <s> ^io.output-link <out>)

   (<out> ^achieved <st>)
   (<st> ^status complete)
-->
   (<out> ^achieved <st> -)
   (write (crlf) |The problem has been solved|)
   (interrupt)
}
